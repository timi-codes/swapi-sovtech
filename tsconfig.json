{
  "compilerOptions": {
    "target": "es5",                                
    "module": "commonjs",                           
    "lib": ["es6"],                                 
    "allowJs": true,                                
    "outDir": "build",                             
    "rootDir": "./",                           
    "strict": true,                                 
    "noImplicitAny": true,                          
    "esModuleInterop": true,                     
    "resolveJsonModule": true,                      
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["node_modules/@types", "@types"],
    "allowSyntheticDefaultImports": true
  },
  "files": ["@types/graphql.d.ts"],
  "include": ["**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
